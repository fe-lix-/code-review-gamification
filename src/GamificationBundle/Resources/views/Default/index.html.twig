{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1>Current month leaderboard</h1>
            </div>
            <div class="bs-component">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Position</th>
                        <th>Username</th>
                        <th>Code review</th>
                        <th>Merge request</th>
                        <th>Comments</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                        <tr>
                            <th>#{{ loop.index }}</th>
                            <th><a href="/badges/{{ user.name }}">{{ user.name }}</a></th>
                            <th>{{ user.codeReviews }}</th>
                            <th>{{ user.mergeRequests}}</th>
                            <th>{{ user.comments }}</th>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
