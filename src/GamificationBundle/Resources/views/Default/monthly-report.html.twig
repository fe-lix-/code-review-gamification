{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1>Users</h1>
            </div>
            <div class="bs-component">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Position</th>
                        <th>Username</th>
                        <th>Code review</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entry in report %}
                        <tr>
                            <th>#{{ loop.index }}</th>
                            <th><a href="/badges/{{ entry.user }}">{{ entry.user}}</a></th>
                            <th>{{ entry.count }}</th>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
